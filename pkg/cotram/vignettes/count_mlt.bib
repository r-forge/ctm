%       => extension of Chen et al. (2002)'s EEs to non-linear covariate effects.
%       Global EEs for beta and h (step function) similar to Chen et al. (2002);
%       Local kernel-weighted EE for nonlinear covariate effects given beta and h.
@article{LuZhang_2010,
  author = {W. Lu and H. H. Zhang},
  title = {On Estimation of Partially Linear Transformation Models},
  journal = {Journal of the American Statistical Association},
  volume = {105},
  number = {490},
  pages = {683--691},
  year = {2010},
  doi = {10.1198/jasa.2010.tm09302}
}

