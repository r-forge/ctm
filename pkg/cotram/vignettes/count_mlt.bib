%       the censoring time C and the covariates X because the marginal Kaplan-Meier
%       estimator of the censoring distribution is used in the IPCWs;
%       assumption is relaxed here + e.g. Cox model does not make this assumption
%       => Cox partial likelihood estimator results as a special case;
%       maringale-based estimating equations for beta and h => beta and h are 
%       estimated iteratively;
%       h is assumed to be a nondecreasing step function with jumps at the failure 
%       times. 
@article{Chenetal_2002,
  author = {K. Chen and Z. Jin and Z. Ying}, 
  title = {Semiparametric Analysis of Transformation Models with Censored Data},
  volume = {89}, 
  number = {3}, 
  pages = {659--668}, 
  year = {2002}, 
  doi = {10.1093/biomet/89.3.659}, 
  journal = {Biometrika} 
}

